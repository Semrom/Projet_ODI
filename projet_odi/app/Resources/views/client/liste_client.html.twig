{% extends 'base.html.twig' %}

{% block title %}
    client | Produits
{% endblock %}

{% block menu %}
    {% include 'menubase.twig' %}
{% endblock %}

{% block header %}
      <div class="page-header">
        <h2 class="centrer isoler">Liste des produits</h2>
      </div>
{% endblock %}

{% block section %}
  <div class="container">
    {% if produits %}
        <table class="table table-striped table-hover ">
          <thead>
            <tr>
              <th>Référence</th>
              <th>Nom</th>
              <th>Descriptif</th>
              <th>Catégorie</th>
              <th>Quantité disponible</th>
              <th>Prix (€)</th>
              <th>Date Limite</th>
            </tr>
          </thead>
          <tbody>

            {% set cpt=0 %}
            {% for produit in produits %}
            {% set cpt = cpt+1 %}
              <tr>
                <td>{{produit.getRefProduit}}</td>
                <td>{{produit.getNomProduit}}<br /><a href="{{ produit.getPhotoProduit }}">Voir photo</a></td>
                <td>{{produit.getDescriptionProduit}}</td>
                <td>{{produit.getCategorieProduit}}</td>
                <td>{{produit.getQuantiteProduit}}</td>
                <td>{{produit.getPrixProduit}}</td>
                <td>{{produit.getDatePeremptionProduit|date('d / m / Y')}}</td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
    {% else %}
       <p class="centrer">Aucun produit dans la base.</p>
    {% endif %}
  </div>
{% endblock %}
