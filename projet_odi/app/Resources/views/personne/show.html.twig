{% extends 'base.html.twig' %}

{% block header %}
  <div class="page-header">
    <h2 class="centrer isoler">Profil personne n° {{ personne.idpersonne }}</h2>
  </div>
{% endblock %}

{% block section %}
    <div class="container">
        <table class="table table-striped table-hover ">
            <tbody>
                <tr>
                    <th>Id. Personne</th>
                    <td>{{ personne.idpersonne }}</td>
                </tr>
                <tr>
                    <th>Pseudo</th>
                    <td>{{ personne.pseudopersonne }}</td>
                </tr>
                <tr>
                    <th>Mot de passe</th>
                    <td>{{ personne.mdppersonne }}</td>
                </tr>
                <tr>
                    <th>Type</th>
                    <td>{{ personne.typepersonne }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('personne_index') }}" class="btn btn-primary">Retourner à la liste</a>
        <a href="{{ path('personne_edit', { 'id': personne.id_personne }) }}" class="btn btn-primary">Modifier</a>
        {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
        {{ form_end(delete_form) }}
{% endblock %}
